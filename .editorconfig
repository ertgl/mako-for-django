[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
root = true
tab_width = 4
trim_trailing_whitespace = true

[*.html]
indent_size = 2
indent_style = space

[*.html.mako]
indent_size = 2
indent_style = space

[*.ini]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.md]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = space

[*.sh]
indent_size = 2
indent_style = space

[*.toml]
indent_size = 2
indent_style = space

[*.{yaml,yml}]
indent_size = 2
indent_style = space
